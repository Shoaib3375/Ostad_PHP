{
    "workbench.iconTheme": "material-icon-theme",
    // "editor.autoClosingBrackets": false,
    "prettier.tabWidth": 4,
    "editor.fontFamily": "'JetBrains Mono', Menlo, Monaco, 'Courier New', 'Fira Code', monospace",
    "[php]": {
        "editor.defaultFormatter": "kokororin.vscode-phpfmt",
        "editor.formatOnSave": true,
    },
    "editor.formatOnSave": false,

    
    // Set the default

    "editor.fontSize": 15,
    "phpfmt.php_bin": "C:\\xampp\\php\\php.exe",

    "phpfmt.passes": [
        
        // "PSR2CurlyOpenNextLine",
        // "PSR2ModifierVisibilityStaticOrder",
        // "PSR2SingleEmptyLineAndStripClosingTag",
        "ReindentSwitchBlocks",
        "AlignDoubleArrow",
        "SpaceAroundParentheses",
        
    ],
    "phpfmt.exclude": ["ReindentComments", "StripNewlineWithinClassBody","AllmanStyleBraces"],
    "phpfmt.psr2": false,
    "workbench.statusBar.visible": true,
    "problems.showCurrentInStatus": true,
    // "C_Cpp.updateChannel": "Insiders",
    "diffEditor.ignoreTrimWhitespace": true,
    "git.autofetch": true,
    
    "php.suggest.basic": true,
    "php.validate.enable": true,
    "emmet.excludeLanguages": ["markdown", "php"],
    "liveServer.settings.donotShowInfoMsg": true,
    "editor.linkedEditing": true,
    "liveServer.settings.donotVerifyTags": true,
    "workbench.startupEditor": "none",
    "launch": {
    





        "configurations": [],
        "compounds": []
    },
    "editor.inlineSuggest.enabled": true,
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": true,
        "markdown": false,
        "code-runner-output": false,
        "php": true
    },
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.guides.bracketPairs": true,

    "workbench.colorTheme": "One Dark Pro"
    // Enable per-language
}